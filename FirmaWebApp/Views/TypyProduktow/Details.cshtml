@model Firma.Data.Model.TypProduktu
<h3>@Model.Nazwa</h3>
<h4>Wybierz produkt</h4>
<div class="kontener1">

    @foreach (var item in Model.Produkt)
    {
        <a asp-action="ProduktDetails" asp-controller="Produkt" asp-route-id="@item.IdProduktu">
            <div class="card">
                <div class="card-image">
                    <img src="~/img/@item.FotoURL" class="card-img-top" alt="" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Nazwa</h5>
                    <p class="card-text"><b>@item.Cena?.Where(c=>c.IdTypuCeny==1).Select(c=>c.Wartosc.ToString("N2") + " " + c.Waluta).FirstOrDefault()</b></p>
                    <p class="card-text">@item.DodatkowaNazwa</p>
                    <a class="btn btn-light" asp-action="AddToCart" asp-controller="TypyProduktow" asp-route-id="@item.IdProduktu">Dodaj do koszyka</a>
                    <a class="btn btn-light" asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.IdProduktu">Kup teraz</a>
                </div>
            </div>
        </a>
    }
</div>
<div>
    <a class="btn btn-light" asp-action="Index" asp-controller="TypyProduktow" style="margin:40px 0px 0px 0px">Powrót</a>
</div>