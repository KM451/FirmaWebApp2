@model Firma.Data.Model.ZlecenieZakupu

@{
    ViewData["Title"] = "ZZData";
    Layout = "~/Views/Shared/_CartLayout.cshtml";
}

<div>
    <div class="kontener2">
        <div>
            <h1>Dostawa oraz</h1>
            <h1>Płatność</h1>
        </div>
    </div>
    <div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ZZData">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdSposobuDostawy" class="control-label"></label>
                        <select asp-for="IdSposobuDostawy" class="form-control" 
                        asp-items="ViewBag.IdSposobuDostawy"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdSposobuPlatnosci" class="control-label"></label>
                        <select asp-for="IdSposobuPlatnosci" class="form-control" 
                        asp-items="ViewBag.IdSposobuPlatnosci"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Złóż zamówienie" class="btn btn-primary" 
                        style="margin:20px 0px 0px 0px" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
