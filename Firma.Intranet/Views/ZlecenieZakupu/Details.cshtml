@model Firma.Data.Model.ZlecenieZakupu
@using Firma.Intranet.ViewResources
@{
    ViewData["Title"] = @Resource.Szczegoly;
}

<h1>@Resource.Szczegoly</h1>

<div>
    <h4>@Resource.ZlecenieZakupu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NrOferty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NrOferty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kontrahent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kontrahent.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataWystawienia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataWystawienia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CzyPotwierdzone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CzyPotwierdzone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NrPotwierdzenia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NrPotwierdzenia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RodzajTransportu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RodzajTransportu.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SposobDostawy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SposobDostawy.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypTransakcji)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypTransakcji.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SposobPlatnosci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SposobPlatnosci.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CzyAktywne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CzyAktywne)
        </dd>
        <dd></dd>
        <dd></dd>
        <h5>@Resource.PozycjeZZ</h5>

        <dd>
            <table class="table">
                <tr>
                    <th>Produkt</th>
                    <th>Ilość</th>
                    <th>Rabat</th>
                    <th>Data realizacji</th>
                </tr>
                @foreach (var item in Model.PozycjaZZ)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produkt.Nazwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ilosc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rabat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataRealizacji)
                        </td>
                        <td>
                            <a asp-controller="PozycjaZZ" asp-action="Edit" asp-route-id="@item.IdPozycjiZleceniaZakupu">@Resource.Edycja</a> |
                            <a asp-controller="PozycjaZZ" asp-action="Delete" asp-route-id="@item.IdPozycjiZleceniaZakupu">@Resource.Usun</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdZleceniaZakupu">@Resource.Edycja</a> |
    <a asp-action="Index">@Resource.PowrotDoListy</a>
</div>
