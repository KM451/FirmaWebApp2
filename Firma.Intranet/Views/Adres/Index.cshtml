@model IEnumerable<Firma.Data.Model.Adres>
@using Firma.Intranet.ViewResources
@{
    ViewData["Title"] = @Resource.Adresy;
}
<h1>@Resource.Adresy</h1>
<p>
    <a asp-action="Create">@Resource.DodajNowyEl</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kontrahent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miejscowosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrDomu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrLokalu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KodPoczowy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poczta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kraj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Siedziba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Glowny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyAktywny)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kontrahent.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miejscowosc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ulica)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NrDomu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrLokalu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KodPoczowy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Poczta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kraj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Siedziba)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Glowny)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CzyAktywny)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAdresu">@Resource.Edycja</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAdresu">@Resource.Szczegoly</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAdresu">@Resource.Usun</a>
                </td>
            </tr>
        }
    </tbody>
</table>
