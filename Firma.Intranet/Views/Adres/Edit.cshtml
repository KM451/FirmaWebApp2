@model Firma.Data.Model.Adres
@using Firma.Intranet.ViewResources
@{
    ViewData["Title"] = @Resource.Edycja;
}
<h1>@Resource.Edycja</h1>
<h4>Adres</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAdresu" />
            <div class="form-group">
                <label asp-for="IdKontrahenta" class="control-label"></label>
                <select asp-for="IdKontrahenta" class="form-control" asp-items="ViewBag.IdKontrahenta"></select>
                <span asp-validation-for="IdKontrahenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miejscowosc" class="control-label"></label>
                <input asp-for="Miejscowosc" class="form-control" />
                <span asp-validation-for="Miejscowosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulica" class="control-label"></label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrDomu" class="control-label"></label>
                <input asp-for="NrDomu" class="form-control" />
                <span asp-validation-for="NrDomu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrLokalu" class="control-label"></label>
                <input asp-for="NrLokalu" class="form-control" />
                <span asp-validation-for="NrLokalu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodPoczowy" class="control-label"></label>
                <input asp-for="KodPoczowy" class="form-control" />
                <span asp-validation-for="KodPoczowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poczta" class="control-label"></label>
                <input asp-for="Poczta" class="form-control" />
                <span asp-validation-for="Poczta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kraj" class="control-label"></label>
                <input asp-for="Kraj" class="form-control" />
                <span asp-validation-for="Kraj" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Siedziba" /> @Html.DisplayNameFor(model => model.Siedziba)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Glowny" /> @Html.DisplayNameFor(model => model.Glowny)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyAktywny" /> @Html.DisplayNameFor(model => model.CzyAktywny)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=@Resource.Zapisz class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@Resource.PowrotDoListy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
