@model Firma.Data.Model.Cena
@using Firma.Intranet.ViewResources
@{
    ViewData["Title"] = @Resource.Szczegoly;
}
<h1>@Resource.Szczegoly</h1>
<div>
    <h4>@Resource.Cena</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produkt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produkt.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypCeny)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypCeny.Typ)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wartosc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wartosc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Waluta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Waluta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CzyAktywna)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CzyAktywna)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdCeny">@Resource.Edycja</a> |
    <a asp-action="Index">@Resource.PowrotDoListy</a>
</div>
