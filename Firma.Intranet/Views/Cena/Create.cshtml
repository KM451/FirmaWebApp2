@model Firma.Data.Model.Cena
@using Firma.Intranet.ViewResources
@{
    ViewData["Title"] = @Resource.DodajNowyEl;
}
<h1>@Resource.DodajNowyEl</h1>
<h4>@Resource.Cena</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProduktu" class="control-label"></label>
                <select asp-for="IdProduktu" class="form-control" asp-items="ViewBag.IdProduktu"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTypuCeny" class="control-label"></label>
                <select asp-for="IdTypuCeny" class="form-control" asp-items="ViewBag.IdTypuCeny"></select>
            </div>
            <div class="form-group">
                <label asp-for="Wartosc" class="control-label"></label>
                <input asp-for="Wartosc" class="form-control" />
                <span asp-validation-for="Wartosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Waluta" class="control-label"></label>
                <input asp-for="Waluta" class="form-control" />
                <span asp-validation-for="Waluta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyAktywna" checked="true" /> @Html.DisplayNameFor(model => model.CzyAktywna)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resource.Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@Resource.PowrotDoListy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
